<div id="fh5co-main">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h2> <%= @book.name %> </h2>
        <div class="fh5co-spacer fh5co-spacer-sm"></div>
        <p>
          <%= image_tag @book.image.url, class: "img-rounded img-responsive" %>
        </p>

        <p>
          <strong>ISBN(<%= t('isbn'); %>):</strong>
          <%= @book.isbn %>
        </p>

        <p>
          <strong><%= t('age'); %>:</strong>
          <%= @book.age %>
        </p>

        <p>
          <strong><%= t('subject'); %>:</strong>
          <%= @book.subject %>
        </p>

        <p>
          <strong><%= t('des'); %>:</strong>
          <%= @book.description %>
        </p>

        <%= link_to (t 'donate'), donate_book_path(@book), method: :put unless @book.donated? %> |
        <%= link_to (t 'edit'), edit_book_path(@book) if (can? :update, @book)%> |
        <%= link_to (t 'back'), books_path %>


      </div>

    </div>
  </div>
</div>



