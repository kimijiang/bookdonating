<div id="fh5co-main">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h2><%=@user.email %></h2>
        <div class="fh5co-spacer fh5co-spacer-sm"></div>
        <p>
        </p>

        <p><%= t('first n'); %>: <%= @user.first_name %></p>
        <p><%= t('last n'); %>: <%= @user.last_name %></p>
        <p><%= t('ages'); %>: <%= @user.age %></p>
        <p><%= t('gender'); %>: <%= @user.gender %></p>
        <p><%= t('home address'); %>: <%= @user.home_address %></p>

        <div class="row">

          <h2>Donated Books</h2>

          <div id="fh5co-board" data-columns>

            <% @donated.each do |book| %>
              <%= render book %>
            <% end %>

          </div>
        </div>

        <div class="row">

          <h2>Received Books</h2>

          <div id="fh5co-board" data-columns>

            <% @received.each do |book| %>
              <%= render book %>
            <% end %>

          </div>


        </div>

      </div>


    </div>
  </div>
</div>